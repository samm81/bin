#!/bin/bash

# gets xbmicons working
~/.xinitrc

swm-statusbar &
#until swm-statusbar &>/dev/null; do
#    sleep 1
#done &

while true; do
    change-desktop
    sleep 180
done &

redshift &
chrome &
tmux &
st -e tmux new -s work || st -e tmux attach -t work &
st -e tmux new -s school || st -e tmux attach -t school &
st -e tmux new -s misc || st -e tmux attach -t misc &

dwm

pkill --oldest --signal TERM -f chrome
while pkill -0 chrome; do sleep .25; done # wait for chrome to safely close
pkill redshift
pkill swm-statusbar
pkill swm
